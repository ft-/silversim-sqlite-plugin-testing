<?xml version="1.0"?>
<Project frameworkVersion="v4_5" name="SilverSim.Database.SQLite" path="SilverSim/Database.SQLite" type="Library">
  <Configuration name="Release">
    <Options>
      <OutputPath>../../bin/plugins</OutputPath>
    </Options>
  </Configuration>
  <Configuration name="DebugRel">
    <Options>
      <OutputPath>../../bin/plugins</OutputPath>
    </Options>
  </Configuration>
  <Configuration name="Debug">
    <Options>
      <OutputPath>../../bin/plugins</OutputPath>
    </Options>
  </Configuration>
  <ReferencePath>../../bin</ReferencePath>
  <Reference name="log4net" localCopy="false"/>
  <Reference name="C5" localCopy="false"/>
  <Reference name="System"/>
  <Reference name="System.Xml"/>
  <Reference name="System.Data"/>
  <Reference name="SilverSim.Types" localCopy="false"/>
  <Reference name="SilverSim.ServiceInterfaces" localCopy="false"/>
  <Reference name="SilverSim.Scene.Types" localCopy="false"/>
  <Reference name="SilverSim.Scene.ServiceInterfaces" localCopy="false"/>
  <Reference name="SilverSim.Viewer.Messages" localCopy="false"/>
  <Reference name="SilverSim.Main.Common" localCopy="false"/>
  <Reference name="SilverSim.Threading" localCopy="false"/>
  <!-- windows path used for compilation only -->
  <Reference name="System.Data.SQLite" path="../../bin/platform-libs/windows" localCopy="false"/>
  <Reference name="Nini" localCopy="false"/>
  <Files>
    <Match pattern="*.cs" recurse="true">
      <Exclude pattern="TemporaryGeneratedFile"/>
    </Match>
    <Match buildAction="EmbeddedResource" path="Resources" pattern="*" recurse="true"/>
    <Match pattern="ProductAssemblyInfo.cs" path=".." recurse="false"/>
    <Match pattern="Prebuild.xml" recurse="false" buildAction="None"/>
  </Files>
</Project>
